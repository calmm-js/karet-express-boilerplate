{
  "name": "karet-express-boilerplate",
  "version": "1.0.0",
  "private": true,
  "description": "Sample with boilerplate for a Karet + Express web app",
  "main": "src/server/start.js",
  "scripts": {
    "bundle": "sh -c \"npm run bundle:css & npm run bundle:js & wait\"",
    "bundle:css": "sh -c \"lessc --clean-css --autoprefix='> 1%' src/_.less public/generated/bundle.css\"",
    "bundle:css:watch": "sh -c \"lessc --source-map --source-map-rootpath=\\\"file://$(pwd)/src\\\" src/_.less public/generated/bundle.css\"",
    "bundle:js": "sh -c \"cp node_modules/babel-polyfill/dist/polyfill.min.js public/generated/bundle.js && NODE_ENV=production rollup -f iife -c -i src/public/client.js >> public/generated/bundle.js\"",
    "lint": "eslint .",
    "livereload:public": "livereload public",
    "migrate": "node ./scripts/migrate",
    "prepare": "sh -c \"mkdir -p public/generated && npm run bundle && npm run test\"",
    "start": "sh -c \"npm run migrate max & wait && node $NODE_OPTS src/server/start.js\"",
    "test": "sh -c  \"npm run lint && NO_USERAGENT=1 mocha --exit --require ./test-helper.js -t 4000\"",
    "watch": "sh -c \"npm run watch:css & npm run watch:server & npm run watch:js & npm run livereload:public & wait\"",
    "watch:css": "sh -c \"npm run bundle:css:watch && watch-run -p 'src/**/*.less' 'npm run bundle:css:watch'\"",
    "watch:js": "sh -c \"NODE_ENV=dev rollup -w -c --sourcemap inline -i src/public/client.js -f iife -o public/generated/bundle.js\"",
    "watch:server": "sh -c \"NODE_ENV=dev nodemon -e js --watch src/server --watch 'src/**/app.js' src/server/start.js\""
  },
  "license": "MIT",
  "dependencies": {
    "atom.storage": "^0.5.3",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-react-constant-elements": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "babel-register": "^6.26.0",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.2",
    "karet": "^2.0.0",
    "karet.util": "^0.17.1",
    "kefir": "^3.7.4",
    "kefir.atom": "^5.4.0",
    "less": "^2.7.2",
    "less-plugin-autoprefix": "^1.5.1",
    "less-plugin-clean-css": "^1.5.1",
    "node-postgres-named": "^2.4.1",
    "partial.lenses": "^13.0.0",
    "path-to-regexp": "^2.0.0",
    "pg": "^7.3.0",
    "postcss-cli": "^4.1.1",
    "postgrator": "^2.10.3",
    "ramda": "^0.25.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "rollup": "^0.50.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.4",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "rollup-watch": "^4.3.1",
    "schemation": "^0.2.2",
    "serve-static": "^1.13.1",
    "smoothscroll": "^0.4.0"
  },
  "devDependencies": {
    "eslint": "^4.9.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-react": "^7.4.0",
    "livereload": "^0.6.3",
    "mocha": "^4.0.1",
    "nodemon": "^1.12.1",
    "watch-run": "^1.2.5",
    "zombie": "^5.0.7"
  },
  "engines": {
    "node": "8.x"
  }
}
